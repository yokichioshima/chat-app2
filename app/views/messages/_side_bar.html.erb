<div class="side-header">
  <div class="user-name">
    <%= link_to "#{ current_user.name }", "/users/#{ current_user.id }/edit" %>
  </div>
  <div class="room-create-btn">
    <a href="/rooms/new">チャットを作成する</a>
  </div>
</div>

<div class="rooms">
  <% current_user.rooms.each do |room|%>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>